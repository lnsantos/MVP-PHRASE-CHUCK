<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myConstraintLayoutHome"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Home.HomeActivity"
        android:background="@color/bacgroundHome">

    <TextView
            android:id="@+id/txt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USUÁRIO"
            android:textSize="26sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/linear" android:layout_marginTop="28dp"
            tools:layout_editor_absoluteX="0dp"/>

    <LinearLayout
                  android:id="@+id/linear"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  android:background="@color/navigationBar"
                  android:padding="16dp">

        <ImageView
                   android:id="@+id/imageAll"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_all"
                   android:layout_weight="1"/>

        <ImageView
                android:id="@+id/imageSun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selected"
                android:layout_weight="1"/>

        <ImageView
                android:id="@+id/imageHappy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_happy"
                android:layout_weight="1"/>

    </LinearLayout>


    <Button
            android:id="@+id/btn_newPhase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NOVA FRASE"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/txt_user"
            tools:layout_editor_absoluteX="151dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    android:layout_margin="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>